                         VerticalContentAlignment="Center" Height="35" BorderBrush="Red" Text="{Binding Path=TestDataDouble, Converter={StaticResource myconverter}, Mode=TwoWay}" 
                         myentry:TextBoxMaskBehavior.Mask="0:#,0.00##"
                         myentry:TextBoxMaskBehavior.ValueType="{Binding Path=TestDataDouble, Converter={StaticResource mytypeconverter}, Mode=OneWay}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0 10 0 0">
                            <Button  x:Name="BtnAjouterActeProgramme" Content="Ajouter" Height="35" Width="105" Margin="0 0 20 0" Click="BtnAjouterActeProgramme_Click"/>
                            <Button  x:Name="BtnModifierActeProgramme" Content="Modifier" Height="35" Width="105" Margin="0 0 20 0" Click="BtnModifierActeProgramme_Click" />
                            <Button  x:Name="BtnSupprimerActeProgramme" Content="Supprimer" Height="35" Width="105" Click="BtnSupprimerActeProgramme_Click" />
                        </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0 10 0 0">
                                <Button   x:Name="BtnJoindreActeProgramme" Content="Joindre" Height="35" Width="105" Margin="0 0 20 0" Click="BtnJoindreActeProgramme_Click" />
                            <Button  x:Name="BtnOuvrirActeProgramme" Content="Ouvrir Acte" Height="35" Width="105" Click="BtnOuvrirActeProgramme_Click"  />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <Label FontSize="18" FontWeight="Bold" Margin="10 0 0 10">Liste Actes</Label>
                        <StackPanel Orientation="Vertical" Margin="20 0 0 0">
                        <Border BorderThickness="1">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" Opacity="0.2" />
                            </Border.Effect>
                            <DataGrid x:Name="datagridActeProgramme" AutoGenerateColumns="False" BorderBrush="White"
                        BorderThickness="0" 
                        AlternatingRowBackground="#F3F3F3"
                        CanUserAddRows="False" EnableRowVirtualization="True" IsReadOnly="True" ItemsSource="{Binding}"
                        Width="500" Height="370" RowDetailsVisibilityMode="VisibleWhenSelected" SelectionChanged="dataViewActeProgramme_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridTextColumn x:Name="idColumn" Width="*" Binding="{Binding NumActe}" Header="Num Acte" />
                                    <DataGridTextColumn x:Name="nameColumn" Width="*" Binding="{Binding DateActe}" Header="Date Acte" />
                                    <DataGridTextColumn  Width="*" Binding="{Binding DateEnrgActe}" Header="Date Enrigistrement Acte" />
                                    <DataGridTextColumn  Width="*" Binding="{Binding DatePubliActe}" Header="Date Publication Acte" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </StackPanel>
                    </StackPanel>
                </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0 20 0 0" VerticalAlignment="Center" x:Name="PermiLotir">
