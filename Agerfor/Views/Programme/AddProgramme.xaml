                            <Button  x:Name="BtnSupprimerPLotir" Content="Supprimer" Height="35" Width="105" Click="BtnSupprimerPLotir_Click" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0 10 0 0">

                            <Button  x:Name="BtnJoindrePLotir" Content="Joindre" Height="35" Width="105" Margin="0 0 20 0" Click="BtnJoindrePLotir_Click" />
                            <Button  x:Name="BtnOuvrirPLotir" Content="Ouvrir Acte" Height="35" Width="105" Click="BtnOuvrirPLotir_Click" />
                        </StackPanel>
                    </StackPanel>
