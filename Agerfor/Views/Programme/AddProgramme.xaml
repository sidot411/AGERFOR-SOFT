                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 10" HorizontalAlignment="Right">
                            <Label FontSize="16" Foreground="Red" Margin="0 0 10 0">Superficie (m²)</Label>
                            <TextBox x:Name="inputSuperficie" Background="#FAFAFA" Width="360" FontSize="18"
                         VerticalContentAlignment="Center" Height="35" BorderBrush="Red"/>
                        </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0 10 0 0">
                                <Button  x:Name="BtnAjouterProgramme" Content="Ajouter" Height="35" Width="105" Margin="0 0 20 0" Click="BtnAjouterProgramme_Click"/>
                                <Button  x:Name="BtnModifierProgramme" Content="Modifier" Height="35" Width="105" Margin="0 0 20 0" Click="BtnModifierProgramme_Click" />
                                <Button  x:Name="BtnAnnulerProgramme" Content="Annuler" Height="35" Width="105" Click="BtnAnnulerProgramme_Click" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0 10 0 0">

                                <Button  x:Name="BtnJoindreprogramme" Content="Joindre" Height="35" Width="105" Margin="0 0 20 0" Click="BtnJoindreprogramme_Click" />
                                <Button  x:Name="BtnOuvrirprogramme" Content="Ouvrir" Height="35" Width="105" Click="BtnOuvrirprogramme_Click"  />
                            </StackPanel>
                        </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Right">
                        <Label FontSize="18" FontWeight="Bold" Margin="10 0 0 10">Informations Acte </Label>
